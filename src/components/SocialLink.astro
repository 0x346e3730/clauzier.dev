---
import { Icon } from 'astro-icon/components'

interface Props {
    href: string;
    icon: string;
    label: string;
}

const { href, icon, label } = Astro.props;
---
<a 
    href={href}
    class="social-link group/link relative flex items-center justify-center w-8 h-8"
    aria-label={label}
>
    <span class="nav-arrow absolute -left-4 opacity-0 transform translate-x-2 transition-all duration-300 group-hover/link:opacity-100 group-hover/link:translate-x-0">&gt;</span>
    <Icon name={icon} class="w-6 h-6 transition-all duration-300 group-hover/link:scale-110" />
</a>

<style>
    .social-link {
        color: #0f0;
        transition: all 0.3s ease;
        position: relative;
    }

    .social-link:hover {
        filter: drop-shadow(0 0 10px rgba(0, 255, 0, 0.8));
    }

    @media (max-width: 640px) {
        .social-link [data-icon] {
            width: 1.25rem;
            height: 1.25rem;
        }
    }
</style> 