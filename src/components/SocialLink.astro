---
import { Icon } from 'astro-icon/components'

interface Props {
    href: string;
    icon: string;
    label: string;
}

const { href, icon, label } = Astro.props;
---
<a 
    href={href}
    target="_blank"
    rel="noopener noreferrer me"
    class="social-link w-6 h-6 hover:text-hacker-primary transition-colors"
    aria-label={`Visit my ${label} profile`}
>
    <Icon name={icon} class="w-full h-full" aria-hidden="true" />
</a>

<style>
    .social-link {
        position: relative;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .social-link::before {
        display: none;
    }

    .social-link:hover {
        transform: scale(1.1);
        transition: transform 0.2s ease-in-out;
    }

    @media (prefers-reduced-motion: reduce) {
        .social-link:hover {
            transform: none;
        }
    }
</style> 