---
import { Icon } from 'astro-icon/components';
import SocialLink from './SocialLink.astro';

const currentYear = new Date().getFullYear();
const buildDate = new Date().toLocaleString('en-US', { 
  timeZone: 'Europe/Paris',
  month: 'short',
  day: 'numeric',
  year: 'numeric',
  hour: '2-digit',
  minute: '2-digit',
  hour12: false
});

const socialLinks = [
  { href: 'https://linkedin.com/in/0x346e3730/', icon: 'ph:linkedin-logo', label: 'LinkedIn' },
  { href: 'https://github.com/0x346e3730/', icon: 'ph:github-logo', label: 'GitHub' },
  { href: 'https://connect.symfony.com/profile/0x346e3730', icon: 'la:symfony', label: 'Symfony Connect' },
  { href: 'https://x.com/0x346e3730/', icon: 'ph:x-logo', label: 'X (Twitter)' },
  { href: 'https://instagram.com/0x346e3730/', icon: 'ph:instagram-logo', label: 'Instagram' },
  { href: 'https://twitch.com/0x346e3730/', icon: 'ph:twitch-logo', label: 'Twitch' }
];
---

<footer class="flex flex-col sm:flex-row justify-between items-center gap-4" role="contentinfo">
  <div class="flex flex-col sm:flex-row items-center gap-2">
    <span class="text-sm opacity-80">© {currentYear} Antonin CLAUZIER</span>
    <span class="text-xs opacity-60 hidden sm:inline" aria-hidden="true">•</span>
    <span class="text-xs opacity-60">
      Built with <span class="opacity-80">{Astro.generator}</span>
      <time datetime={new Date(buildDate).toISOString()} class="opacity-80">on {buildDate}</time>
    </span>
  </div>
  <nav class="flex justify-end gap-2" aria-label="Social media links">
    {socialLinks.map((link) => (
      <SocialLink {...link} />
    ))}
  </nav>
</footer>

<style>
  @media (prefers-reduced-motion: reduce) {
    .social-link:hover {
      transform: none;
    }
  }
</style> 