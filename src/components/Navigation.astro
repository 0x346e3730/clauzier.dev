---
import NavLink from './NavLink.astro';

const navItems = [
  { href: '/blog/', label: 'BLOG' },
  { href: '/', label: 'HOME' },
  { href: '/resume/', label: 'RESUME' }
];
---
<nav 
  class="w-full h-16 border border-hacker-primary bg-hacker-darker/50 backdrop-blur-sm rounded relative overflow-hidden group"
  role="navigation"
  aria-label="Main navigation"
>
    <!-- Glitch effect container -->
    <div class="absolute inset-0 opacity-50 group-hover:animate-glitch pointer-events-none border border-hacker-primary" aria-hidden="true"></div>
    
    <ul class="h-full flex justify-center items-center relative z-10">
        {navItems.map(({ href, label }) => (
          <li class="px-12">
            <NavLink href={href}>[{label}]</NavLink>
          </li>
        ))}
    </ul>
    
    <!-- Corner decorations -->
    <div class="absolute top-0 left-0 w-2 h-2 border-l-2 border-t-2 border-hacker-primary" aria-hidden="true"></div>
    <div class="absolute top-0 right-0 w-2 h-2 border-r-2 border-t-2 border-hacker-primary" aria-hidden="true"></div>
    <div class="absolute bottom-0 left-0 w-2 h-2 border-l-2 border-b-2 border-hacker-primary" aria-hidden="true"></div>
    <div class="absolute bottom-0 right-0 w-2 h-2 border-r-2 border-b-2 border-hacker-primary" aria-hidden="true"></div>
</nav>

<style>
    nav::before {
        content: '';
        position: absolute;
        inset: 0 0 auto 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, #00ff00, transparent);
        animation: scan-line 2s linear infinite;
    }

    @keyframes scan-line {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }
</style>